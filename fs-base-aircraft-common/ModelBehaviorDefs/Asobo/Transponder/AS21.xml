<ModelBehaviors>
	<Include RelativeFile="Transponder.xml"/>

	<Template Name="ASOBO_AS21_Template">
		<DefaultTemplateParameters>
			<ID>1</ID>
		</DefaultTemplateParameters>
		
		<UseTemplate Name="ASOBO_GT_Helper_Suffix_ID_Appender">
			<TEMPLATE_TO_CALL>ASOBO_AS21_SubTemplate</TEMPLATE_TO_CALL>
		</UseTemplate>
	</Template>

	<Template Name="ASOBO_AS21_SubTemplate">
		<DefaultTemplateParameters>
			<NODE_ID_KNOB_SETTING>TRANSPONDER_Knob_Mode#SUFFIX_ID#</NODE_ID_KNOB_SETTING>
			<ANIM_NAME_KNOB_SETTING>TRANSPONDER_Knob_Mode#SUFFIX_ID#</ANIM_NAME_KNOB_SETTING>
			<NODE_ID_IDT>TRANSPONDER_Push_IDT#SUFFIX_ID#</NODE_ID_IDT>
			<ANIM_NAME_IDT>TRANSPONDER_Push_IDT#SUFFIX_ID#</ANIM_NAME_IDT>
			<NODE_ID_VFR>TRANSPONDER_Push_VFR#SUFFIX_ID#</NODE_ID_VFR>
			<ANIM_NAME_VFR>TRANSPONDER_Push_VFR#SUFFIX_ID#</ANIM_NAME_VFR>		
			<NODE_ID_KNOB_THOUSANDS>TRANSPONDER_Knob_Code#SUFFIX_ID#</NODE_ID_KNOB_THOUSANDS>
			<ANIM_NAME_KNOB_THOUSANDS>TRANSPONDER_Knob_Code#SUFFIX_ID#</ANIM_NAME_KNOB_THOUSANDS>
			<SCREEN_NODE_ID>TRANSPONDER_Screen#SUFFIX_ID#</SCREEN_NODE_ID>
			<BUTTON_EMISSIVE_FACTOR>(A:TRANSPONDER STATE:1, Enum) 0 &gt;</BUTTON_EMISSIVE_FACTOR>
		</DefaultTemplateParameters>
		<Component ID="#SCREEN_NODE_ID#" Node="#SCREEN_NODE_ID#">
			<UseTemplate Name="ASOBO_GT_Emissive_Gauge">
				<EMISSIVE_CODE>0.5</EMISSIVE_CODE>
			</UseTemplate>
		</Component>
		<UseTemplate Name="ASOBO_Button_Transponder_ID_Template">
			<ID>VFR</ID>
			<TOOLTIPID>TT:COCKPIT.TOOLTIPS.XPDR_VFR</TOOLTIPID>
		</UseTemplate>
		<UseTemplate Name="ASOBO_Button_Transponder_ID_Template">
			<ID>IDT</ID>
			<TOOLTIPID>TT:COCKPIT.TOOLTIPS.YOKE_BUTTON_IDENT</TOOLTIPID>
		</UseTemplate>
		<UseTemplate Name="ASOBO_Button_Transponder_ID_Template">
			<ID>FUNC</ID>
			<TOOLTIPID>TT:COCKPIT.TOOLTIPS.INOP TT:COCKPIT.TOOLTIPS.XPDR_A_21_FN</TOOLTIPID>
		</UseTemplate>
		<UseTemplate Name="ASOBO_Button_Transponder_ID_Template">
			<ID>ENTER</ID>
			<TOOLTIPID>TT:COCKPIT.TOOLTIPS.XPDR_ENTER_DIGIT</TOOLTIPID>
		</UseTemplate>
		<UseTemplate Name="ASOBO_Transponder_knob_Setting_Template">
			<ANIMREF_ID>0</ANIMREF_ID>
			<ANIMTIP_0>TT:COCKPIT.TOOLTIPS.XPDR_OFF</ANIMTIP_0>
			<ANIMTIP_0_ON_PERCENT>0</ANIMTIP_0_ON_PERCENT>
			<ANIMTIP_1>TT:COCKPIT.TOOLTIPS.XPDR_SBY</ANIMTIP_1>
			<ANIMTIP_1_ON_PERCENT>0.25</ANIMTIP_1_ON_PERCENT>
			<ANIMTIP_2>TT:COCKPIT.TOOLTIPS.XPDR_GND</ANIMTIP_2>
			<ANIMTIP_2_ON_PERCENT>0.5</ANIMTIP_2_ON_PERCENT>
			<ANIMTIP_3>TT:COCKPIT.TOOLTIPS.XPDR_ON</ANIMTIP_3>
			<ANIMTIP_3_ON_PERCENT>0.75</ANIMTIP_3_ON_PERCENT>
			<ANIMTIP_4>TT:COCKPIT.TOOLTIPS.XPDR_ALT</ANIMTIP_4>
			<ANIMTIP_4_ON_PERCENT>1.0</ANIMTIP_4_ON_PERCENT>
			<NODE_ID>#NODE_ID_KNOB_SETTING#</NODE_ID>
			<ANIM_NAME>#ANIM_NAME_KNOB_SETTING#</ANIM_NAME>
			<ANIM_LAG>800</ANIM_LAG>
			<POS_TEST>2</POS_TEST>
			<POS_ON>3</POS_ON>
			<POS_ALT>4</POS_ALT>
		</UseTemplate>
		<Component ID="#NODE_ID_KNOB_THOUSANDS#" Node="#NODE_ID_KNOB_THOUSANDS#">
			<UseTemplate Name="ASOBO_GT_Knob_Infinite">
				<ANIM_NAME>#ANIM_NAME_KNOB_THOUSANDS#</ANIM_NAME>
				<CLOCKWISE_CODE>(&gt;H:Transponder_Code_INC)</CLOCKWISE_CODE>
				<ANTICLOCKWISE_CODE>(&gt;H:Transponder_Code_DEC)</ANTICLOCKWISE_CODE>
				<ANIMREF_ID>0</ANIMREF_ID>
				<ANIMTIP_0_ON_CURSOR>TurnLeft</ANIMTIP_0_ON_CURSOR>
				<ANIMTIP_1_ON_CURSOR>TurnRight</ANIMTIP_1_ON_CURSOR>
				<ANIMTIP_0>TT:COCKPIT.TOOLTIPS.XPDR_A_21_CODE_KNOB_DEC</ANIMTIP_0>
				<ANIMTIP_1>TT:COCKPIT.TOOLTIPS.XPDR_A_21_CODE_KNOB_INC</ANIMTIP_1>
				<WWISE_EVENT>as21_transponder_code_knob</WWISE_EVENT>	
				<ANIM_LAG>300</ANIM_LAG>
				<COUNT>36</COUNT>
			</UseTemplate>
		</Component>
	</Template>
</ModelBehaviors>