<ModelBehaviors>
	<Include ModelBehaviorFile="Asobo\Generic.xml"/>

	<Template Name="ASOBO_Accelerometer_Template">
		<DefaultTemplateParameters>
			<ID>1</ID>
		</DefaultTemplateParameters>
		
		<UseTemplate Name="ASOBO_GT_Helper_Suffix_ID_Appender">
			<TEMPLATE_TO_CALL>ASOBO_Accelerometer_SubTemplate</TEMPLATE_TO_CALL>
		</UseTemplate>
	</Template>

	<Template Name="ASOBO_Accelerometer_SubTemplate">
		<DefaultTemplateParameters>
			<ACCELEROMETER>INSTRUMENT_Accelerometer</ACCELEROMETER>
			<!-- <SCREEN_NODE_ID>INSTRUMENT_Accelerometer_Screen#SUFFIX_ID#</SCREEN_NODE_ID> -->
			<!-- <EMISSIVE_FAILURE>(A:CIRCUIT AVIONICS ON, Bool)</EMISSIVE_FAILURE> -->
		</DefaultTemplateParameters>
		<!-- <Component ID="#SCREEN_NODE_ID#" Node="#SCREEN_NODE_ID#"> -->
			<!-- <UseTemplate Name="ASOBO_GT_Emissive_Gauge"> -->
				<!-- <EMISSIVE_CODE>(I:XMLVAR_#ACCELEROMETER#_CONTRAST_#ID#) 100 / 0.95 * 0.05 +</EMISSIVE_CODE> -->
				<!-- <FAILURE>#EMISSIVE_FAILURE#</FAILURE> -->
			<!-- </UseTemplate> -->
		<!-- </Component> -->
		<Component ID="#ACCELEROMETER#_Interactions">
			<UseTemplate Name="ASOBO_Accelerometer_Push_Button_Template">
				<BTN_ID>clear</BTN_ID>
				<TOOLTIPID>TT:COCKPIT.TOOLTIPS.ACCELEROMETER_CLEAR</TOOLTIPID>
			</UseTemplate>
			<UseTemplate Name="ASOBO_Accelerometer_Push_Button_Template">
				<BTN_ID>plus</BTN_ID>
				<TOOLTIPID>TT:COCKPIT.TOOLTIPS.ACCELEROMETER_PLUS</TOOLTIPID>
			</UseTemplate>
			<UseTemplate Name="ASOBO_Accelerometer_Push_Button_Template">
				<BTN_ID>minus</BTN_ID>
				<TOOLTIPID>TT:COCKPIT.TOOLTIPS.ACCELEROMETER_MINUS</TOOLTIPID>
			</UseTemplate>
			<UseTemplate Name="ASOBO_Accelerometer_Push_Button_Template">
				<BTN_ID>enter</BTN_ID>
				<TOOLTIPID>TT:COCKPIT.TOOLTIPS.ACCELEROMETER_ENTER</TOOLTIPID>
			</UseTemplate>
			<UseTemplate Name="ASOBO_Accelerometer_Push_Button_Template">
				<BTN_ID>flgt</BTN_ID>
				<TOOLTIPID>TT:COCKPIT.TOOLTIPS.ACCELEROMETER_FLGT</TOOLTIPID>
			</UseTemplate>
			<UseTemplate Name="ASOBO_Accelerometer_Push_Button_Template">
				<BTN_ID>club</BTN_ID>
				<TOOLTIPID>TT:COCKPIT.TOOLTIPS.ACCELEROMETER_CLUB</TOOLTIPID>
			</UseTemplate>
			<UseTemplate Name="ASOBO_Accelerometer_Knob_Template">
				<KNB_ID>CONTRAST</KNB_ID>
				<KNOB_POSITION_VAR_TYPE>I</KNOB_POSITION_VAR_TYPE>
				<ANIMTIP_0>TT:COCKPIT.TOOLTIPS.INOP TT:COCKPIT.TOOLTIPS.ACCELEROMETER_KNOB_CONTRAST_DEC</ANIMTIP_0>
				<ANIMTIP_1>TT:COCKPIT.TOOLTIPS.INOP TT:COCKPIT.TOOLTIPS.ACCELEROMETER_KNOB_CONTRAST_INC</ANIMTIP_1>
			</UseTemplate>
			<UseTemplate Name="ASOBO_Accelerometer_Knob_Template">
				<KNB_ID>VOLUME</KNB_ID>
				<ANIMTIP_0>TT:COCKPIT.TOOLTIPS.INOP TT:COCKPIT.TOOLTIPS.ACCELEROMETER_KNOB_VOLUME_DEC</ANIMTIP_0>
				<ANIMTIP_1>TT:COCKPIT.TOOLTIPS.INOP TT:COCKPIT.TOOLTIPS.ACCELEROMETER_KNOB_VOLUME_INC</ANIMTIP_1>
			</UseTemplate>
		</Component>
	</Template>

	<Template Name="ASOBO_Accelerometer_Push_Button_Template">
		<DefaultTemplateParameters>
			<NODE_ID>#ACCELEROMETER#_Push_#BTN_ID##SUFFIX_ID#</NODE_ID>
			<ANIM_NAME>#ACCELEROMETER#_Push_#BTN_ID##SUFFIX_ID#</ANIM_NAME>
			<KEY_ID>okey_#BTN_ID#</KEY_ID>
			<WWISE_EVENT_1>accelerometer_push_button_on</WWISE_EVENT_1>
			<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
			<WWISE_EVENT_2>accelerometer_push_button_off</WWISE_EVENT_2>
			<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
		</DefaultTemplateParameters>
		<Component ID="#NODE_ID#" Node="#NODE_ID#">
			<UseTemplate Name="ASOBO_GT_Push_Button">
				<LEFT_SINGLE_CODE>(&gt;H:#KEY_ID#)</LEFT_SINGLE_CODE>
			</UseTemplate>
		</Component>
	</Template>
	<Template Name="ASOBO_Accelerometer_Knob_Template">
		<DefaultTemplateParameters>
			<KNOB_NAME>#ACCELEROMETER#_Knob_#KNB_ID##SUFFIX_ID#</KNOB_NAME>
			<KNOB_POSITION_VAR>XMLVAR_#ACCELEROMETER#_#KNB_ID##SUFFIX_ID#</KNOB_POSITION_VAR>
			<INIT_VALUE>50</INIT_VALUE>
		</DefaultTemplateParameters>
		<UseTemplate Name="ASOBO_GT_Knob_Finite_Dummy">
		</UseTemplate>
	</Template>
</ModelBehaviors>